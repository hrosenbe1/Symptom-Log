<div class="page-header">
  <%= link_to logs_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_log_path(@log), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show log</h1>
</div>

<dl class="dl-horizontal">
  <dt>How you felt:</dt>
  <dd><%= @log.how_you_felt %></dd>

  <dt>What you were doing:</dt>
  <dd><%= @log.what_you_were_doing %></dd>

  <dt>Where you were:</dt>
  <dd><%= @log.where_you_were %></dd>

  <dt>When it happened:</dt>
  <dd><%= @log.when_it_happened %></dd>

  <dt>Pain level:</dt>
  <dd><%= @log.pain_level %></dd>

  <dt>Other:</dt>
  <dd><%= @log.other %></dd>

  <dt>Image:</dt>
  <dd><%= image_tag @log.image.url(:large) %></dd>

  <dt>Created:</dt>
  <dd><%= @log.created_at %></dd>

</dl>
